{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "build": {
    "appId": "com.tinytaskeditor.app",
    "productName": "Tiny Task Editor",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable",
      "artifactName": "TinyTask Editor Portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.15.6",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8"
  }
}